= form_for @player,:html => { :multipart => true } do |f|
  - if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    = f.label "Nombres",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :first_name,class:"form-control"
  .form-group.row
    = f.label "Apellidos",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :last_name,class:"form-control"
  .form-group.row
    = f.label "Teléfono",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :telefono,class:"form-control"
  .form-group.row
    = f.label "Correo",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :email,class:"form-control"
  .form-group.row
    = f.label "Celular",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :movil,class:"form-control"
  .form-group.row
    = f.label "Número identificación",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :number_id,class:"form-control"
  .form-group.row
    = f.label "Equipo",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.collection_select(:team_id, @teams, :id, :name, {:prompt=>true}, {:class=>'form-control'})
  .form-group.row
    = f.label "Número camiseta",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.text_field :tshirt_number,class:"form-control"
  .form-group.row
    = f.label "Foto",class:"col-sm-4 col-md-3 col-xs-12 col-form-label"
    .col-sm-6.col-xs-12.col-md-4
      = f.file_field :foto,class:"form-control"

  .form-group.row
    .offset-md-3.col-md-4
      %button.btn.btn-success{"type"=>"submit"}
        %i.fa.fa-floppy-o{"aria-hidden"=>"true"}
        %span  Guardar Jugador
