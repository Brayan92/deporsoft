  .big-padding
    .big-padding{"style"=>"border:solid #f7f7f9;"}
      %h1 Usuarios
      %table.table.table-striped
        %thead
          %tr
            %th #
            %th Nombre
            %th Correo
            %th IdentificaciÃ³n
            %th Ip login
            %th Fecha login
            %th
        %tbody
          - @users.each do |user|
            %tr
              %td= user.id
              %td= user.fullname
              %td= user.email
              %td= user.number_id
              %td= user.last_sign_in_ip
              %td= user.last_sign_in_at
              %td
                .dropdown
                  %button.btn.btn-secondary.dropdown-toggle{"type"=>"button","id"=>"actions","data-toggle"=>"dropdown","aria-haspopup"=>"true","aria-expanded"=>"false"} Acciones
                  .dropdown-menu{"aria-labelledby"=>"actions"}
                    = link_to 'Ver', user,:class=>"dropdown-item"
                    = link_to 'Editar', edit_user_path(user),:class=>"dropdown-item"
                    = link_to 'Elimnar', user, :method => :delete, :class=>"dropdown-item",:data => { :confirm => 'Are you sure?' }
