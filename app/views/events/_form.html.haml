= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    = f.label 'NOmbre',class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.text_field :name,class:"form-control"
  .form-group.row
    = f.label 'Es gol',class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.check_box :is_goal,class:"form-control"
  .form-group.row
    .offset-sm-2.col-sm-4
      %button.btn.btn-success{"type"=>"submit"}
        %i.fa.fa-floppy-o{"aria-hidden"=>"true"}
        %span  Guardar evento
      %a.btn.btn-secondary{"href"=>"/events"} Atras   
